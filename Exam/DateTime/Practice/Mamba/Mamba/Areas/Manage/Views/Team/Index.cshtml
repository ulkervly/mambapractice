@model List<Team>
@{
    int counter = 0;
}

<div class="container-fluid">
    <div class="row justify-content-between align-items-center">
        <h1>Teams:</h1>
        <a class="btn btn-primary" asp-action="create" asp-controller="team">Create</a>
    </div>
    <table class="table">
        <thead>
            <tr>
                <th scope="col">No</th>
                <th scope="col">Name</th>
                <t
                <th scope="col">Actions</th>
            </tr>
        </thead>
        <tbody>
            @foreach (var team in Model)
            {
                counter++;
                <tr>
                    <th scope="row">@counter</th>
                    <td>@team.FullName</td>
                    <td>@team.Profession</td>
                  
                    
                    <td>
                        <a asp-action="update" asp-controller="team" asp-route-id="@team.Id" class="btn btn-warning">Update</a>
                        <a asp-action="delete" asp-controller="team" asp-route-id="@team.Id" class="btn btn-danger">Delete</a>
                    </td>
                </tr>
            }
        </tbody>
    </table>
</div>
